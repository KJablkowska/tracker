<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/bgc_home_1">
    <ImageView
            android:layout_width="181dp"
            android:layout_height="108dp" app:srcCompat="@drawable/run_ikon"
            android:id="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="parent"/>

    <Button android:layout_width="211dp"
            android:layout_height="57dp"
            android:text="Let's go"
            android:textColor="@color/fontColor"
            android:background="#0000"
            android:id="@+id/Lets_go_button"


            android:fontFamily="sans-serif-light" android:textSize="18sp" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.392"/>
    <TextView
            android:text="ACTIVITY TRACKING"
            android:textColor="@color/fontColor"
            android:gravity="center"
            android:layout_width="248dp"
            android:layout_height="112dp" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" android:id="@+id/textView2"
            android:fontFamily="sans-serif-thin" android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>

</android.support.constraint.ConstraintLayout>

